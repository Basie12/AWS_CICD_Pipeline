packages:
  dnf:  # Use dnf for AL2023 (replaces yum in older AL2)
    gcc-c++: []
    python3.13-devel: []  # Matches your Python version
    make: []
    postgresql15-devel: []  # If using psycopg2 or Postgres; adjust version if needed
    libjpeg-turbo-devel: []  # For Pillow/image processing in ML
    zlib-devel: []  # For compression in some libs
    libffi-devel: []  # For cffi in cryptography packages
    openssl-devel: []  # For SSL in requests or similar
commands:
  01_upgrade_pip:
    command: /usr/bin/python3.13 -m pip install --upgrade pip setuptools wheel